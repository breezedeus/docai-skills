{
  "name": "docai-urlsummarizer",
  "title": "URL 内容总结器",
  "description": "自动将网页 URL 转换为 Markdown 并生成结构化总结，结合 docai-convert2md 和 AI 总结功能",
  "version": "1.0.0",
  "author": "DocAI",
  "license": "MIT",
  "categories": ["content", "summarization", "web"],
  "tools": [
    {
      "name": "summarize",
      "description": "总结网页内容，先转换为 Markdown 再进行 AI 结构化总结",
      "parameters": {
        "url": {
          "type": "string",
          "description": "要总结的网页 URL",
          "required": true
        },
        "model": {
          "type": "string",
          "description": "指定 AI 模型（如 sonnet, haiku）",
          "required": false
        },
        "output": {
          "type": "string",
          "description": "输出文件路径",
          "required": false
        }
      },
      "command": "python tools/summarize.py"
    }
  ],
  "dependencies": [
    "docai-convert2md"
  ],
  "keywords": ["url", "summarization", "markdown", "ai", "web-content"],
  "examples": [
    "summarize https://mp.weixin.qq.com/s/XClh6xJmXoXbyBC9lKzPdA",
    "summarize https://arxiv.org/abs/2601.04500v1 --model sonnet",
    "summarize https://www.breezedeus.com/article/ai-agent-context-engineering --output summary.md"
  ]
}